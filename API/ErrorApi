local Anim=require(script.Parent.Animations)
local Arch=require(script.Parent.UniversalRoxArch)
local ErrorApi = {}
local function lol(Title,Desc)
	local errclone = script.Parent.Parent.SystemApps.error.errorApp:Clone()
	errclone.appFrame.TitleBar.AppTitle.Text=Title
	errclone.appFrame.ErrTitle.Text=Title
	errclone.appFrame.ErrDesc.Text=Desc
	Arch.OpenApp(errclone)
	local audioclone = script.Error:Clone()
	audioclone.Parent=script.Parent.Parent.Parent.RbxSoundSystem
	audioclone:Play()
	wait(audioclone.TimeLength)
	audioclone:Destroy()
end
function ErrorApi.ShowError(Title:string, Desc:string)

	task.spawn(lol,Title,Desc)

end

return ErrorApi
